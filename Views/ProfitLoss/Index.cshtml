@model List<ProfitLoss>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-green">
      <div class="panel-heading">Daily Profit/Loss List</div>
                        <div class="panel-body">
    <form class="col-lg-4" asp-action="SearchByDate" asp-controller="ProfitLoss" method="Get">
      <div class="input-group">
        <input type="date" id="date" name="date" class="form-control" placeholder="Enter date" value="@ViewBag.DateValue"/>
        <span class="input-group-btn">
          <input type="submit" class="btn btn-primary" value="Search"/>
        </span>
      </div>
    </form>
    
    
  <hr>
<div class="container col-lg-12">          
  <table class="table table-bordered table-stripped table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th>Total Material Uses</th>
        <th>Total Sales</th>
        <th> Profit/Loss</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var p in Model)
      {
          <tr>
        <td>@p.CreatedAt.ToShortDateString()</td>
        <td>Rs.@p.TotalMaterialUsedToday.ToString("#.##")</td>
        <td>Rs.@p.TotalSaledToday.ToString("#.##")</td>
        <td>Rs.@p.ProfitOrLoss.ToString("#.##")</td> 

      </tr>
      }  
    </tbody>
  </table>
</div>
  </div>
</div>
</div>