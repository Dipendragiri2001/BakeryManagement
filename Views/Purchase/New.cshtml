@model Purchase
<div class="row">
<div class="col-lg-4">
  
  <div class="panel panel-primary">
<div class="panel-heading panel-primary ">Purchase From Supplier</div>
<hr>
<div class="panel-body">
 <form asp-controller="Purchase" asp-action="New" method="POST">
     <Input type="hidden" asp-for="Id"/>
     <div class="form-group">
         <label asp-for="SupplierId">Supplier Name</label>
         <select asp-for="SupplierId" asp-items=@ViewBag.Suppliers class="form-control"></select>
     </div>
     <div class="form-group">
         <label asp-for="ProductId" >Material Name: </label>
         <select  asp-for="ProductId" asp-items="@ViewBag.Products" class="form-control" ></select>
     </div>
     <div class="form-group">
         <label asp-for="Quantity">Product Quantity(in kg):</label>
         <input type="text" asp-for="Quantity" class="form-control"/>
     </div>
     <div class="form-group">
         <label asp-for="TotalAmount">Total Amount </label>
         <input type="text" asp-for="TotalAmount" class="form-control"/>
     </div>
     <div>
      <input type="submit" value="Submit" class="btn btn-success">
  </div>
 </form>
  </div>
</div>
</div>
</div>