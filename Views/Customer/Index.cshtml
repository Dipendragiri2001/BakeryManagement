@model List<Customer>

  
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-green">
      <div class="panel-heading">Customer List</div>
                        <div class="panel-body">        
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Customer Id</th>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Last Name</th>
        <th>Mobile  Number</th>
        <th>Phone Number</th>
        <th>Address</th>
        <th colspan="2">Action</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var p in Model)
      {
          <tr>
        <td>@p.Id</td>
        <td>@p.FirstName</td>
        <td>@p.MiddleName</td>
        <td>@p.LastName</td>
        <td>@p.MobileNumber</td>
        <td>@p.PhoneNumber</td>
        <td>@p.Address</td>
        <td><a class="btn btn-primary" asp-controller="Customer" asp-action="Update" asp-route-id="@p.Id">Update</a></td>
        <td><a class="btn btn-danger delete" data-controller="Customer" data-action="Delete" data-id="@p.Id" data-body-message="Are You Sure Want To Delete @p.FirstName">Delete</a></td>

      </tr>
      }  
    </tbody>
  </table>
</div>
    </div>
  </div>
</div>
