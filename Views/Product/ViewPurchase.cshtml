@model List<Product>

  
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-green">
      <div class="panel-heading">Purchase List</div>
                        <div class="panel-body">        
  <table class="table table-hover">
    <thead>
      <tr class= table-hover>
        <th>Id</th>
        <th>Product Name</th>
        <th colspan="2">Action</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var p in Model)
      {
          <tr class="table-light">
        <td>@p.Id</td>
        <td>@p.PurchaseName</td>
        <td><a class="btn btn-primary" asp-controller="Product" asp-action="Update" asp-route-id="@p.Id">Update</a></td>
        <td><a class="btn btn-danger delete" data-id="@p.Id" data-controller="Product" data-action="delete" data-body-message="Are You Sure Want To Delete @p.ProductName" ><i class="glyphicon glyphicon-trash"></i>Delete</a></td>
      </tr>
      }  
    </tbody>
  </table>
  <input type ="hidden" id="hiddenEmployeeId"/>
</div>
    </div>
  </div>
</div>