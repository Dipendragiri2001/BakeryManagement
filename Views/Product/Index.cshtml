@model List<Product>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-green">
      <div class="panel-heading">Products List</div>
                        <div class="panel-body">
  
<div class="container col-lg-12">          
  <table class="table table-hover table-bordered table-stripped" id="dataTables-example">
    <thead>
      <tr class= table-hover>
        <th>Product Id</th>
        <th>Product Name</th>
        <th>Price</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var p in Model)
      {
          <tr class="table-light">
        <td>@p.Id</td>
        <td>@p.ProductName</td>
        <td>Rs. @p.Price</td>
        <td><a class="btn btn-primary" asp-controller="Product" asp-action="Update" asp-route-id="@p.Id">Update</a></td>
        <td><a class="btn btn-danger delete" style="color:white" data-id="@p.Id" data-controller="Product" data-action="Delete" data-body-message="Are You Sure Want To Delete @p.ProductName">Delete</a></td>
      </tr>
      }  
    </tbody>
  </table>
  <input type ="hidden" id="hiddenEmployeeId"/>
</div>
