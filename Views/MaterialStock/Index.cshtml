@model List<MaterialStock>
<br/>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-green">
      <div class="panel-heading">Material Stock List</div>
                        <div class="panel-body">
    <form  class="col-lg-4" asp-action="SearchByDate" asp-controller="MaterialStock" method="Get">
      <div class="input-group">
        <input type="date" id="date" name="date" class="form-control" placeholder="Enter date" value="@ViewBag.DateValue"/>
        <span class="input-group-btn">
          <input type="submit" class="btn btn-primary" value="Search"/>
        </span>
      </div>
    </form>
 
<br/>
  <hr>
<div class="container col-lg-12">          
  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
      <tr>
        <th>Material Name</th>
        <th>Stock Quantity</th>
        <th>Rate Per Kg</th>
        <th>Price</th>
        <th>Date</th>
        <th colspan="2">Action</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var p in Model)
      {
          <tr>
        <td>@p.ProductName</td>
        <td>@(p.Quantity) @(p.MeasurementUnit) </td>
        <td>Rs. @p.RatePerKg.ToString("#.##")</td> 
        <td>Rs. @p.TotalAmount.ToString("#.##")</td> 
        <td>Rs. @p.CreatedAt.ToShortDateString()</td>
        <td><a class="btn btn-primary" asp-controller="MaterialStock" asp-action="Update" asp-route-id="@p.Id">Update</a></td>
        <td><a class="btn btn-danger delete" data-controller="MaterialStock" data-action="Delete" data-id="@p.Id" data-body-message="Are You Sure Want To Delete This @p.ProductName">Delete</a></td>

      </tr>
      }  
    </tbody>
  </table>
</div>
                        </div>
    </div>
  </div> 
  </div>