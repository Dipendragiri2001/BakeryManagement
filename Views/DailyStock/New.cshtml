@model DailyStock
<hr>

 <div class="container-fluid">
  
  <div class="row">
   
      <div class="col-lg-12">
      <div class="col-lg-3">

  <div class="panel panel-primary">
<div class="panel-heading panel-primary">Add On Daily Stock</div>
<hr>
<div class="panel-body"> 
 
<form asp-controller="DailyStock" asp-action="Create" method="POST" >
    <input type="hidden" value ="@ViewBag.Message" name="message" id="message" class="form-control" />
    <input type="hidden" asp-for="Id"/> 
      
      <div class="form-group ">
      <label asp-for="ProductId">Product Name</label>
        <select asp-for="ProductId" asp-items=@ViewBag.ProductName class="form-control"></select>
       </div>
    
    
  <div class="form-group has-success">
    <label asp-for="Quantity">Quantity:</label>
    <input type="text" class="form-control"  asp-for="Quantity"/>
  </div> 
  <div class="form-group">
    
    <input type="Hidden" class="form-control" asp-for="CreatedAt"/>
  </div>
  <div>
      <button type="submit" class="btn btn-success">Submit</button>
  </div>
</form>
   </div>
</div>

      </div>
</div>
  </div>
</div>
  



  