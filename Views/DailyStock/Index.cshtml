@model List<DailyStock>
<br/>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-green">
      <div class="panel-heading">Daily Stock List</div>
                        <div class="panel-body">
              <form asp-action="SearchByDate" asp-controller="DailyStock">
                    <div class="input-group">
                        <input type="date" id="date" name="date" class="form-control" placeholder="Enter date" value="@ViewBag.DateValue"/>
                      <div class="form-group">
                        <input class="form-control input-sm btn-info" value="Search" type="submit"/>
                      </div>
                      
                    </div>
               </form>  
  
<br/>

<div class="container col-lg-12">          
  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
      <tr>
        <th>Product Id</th>
        <th>Product Name</th>
        <th>Product Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th>CreatedAt</th>
        <th colspan="2">Action</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var p in Model)
      {
          <tr>
        <td>@p.Id</td>
        <td>@p.Product.ProductName</td>
        <td>@p.Quantity</td>
        <td>@p.Product.Price</td> 
        <td>@(p.Quantity * p.Product.Price)</td>
        <td>@p.CreatedAt.ToShortDateString()</td>
        <td><a class="btn btn-primary" asp-controller="DailyStock" asp-action="Update" asp-route-id="@p.Id" asp-route-name="@p.Product.ProductName">Update</a></td>
        <td><a class="btn btn-danger delete" style="color:white" data-id="@p.Id" data-controller="DailyStock" data-action="Delete" data-body-message="Are You Sure Want To Delete @p.Product.ProductName">Delete</a></td>

      </tr>
      }  
    </tbody>
     </table>
    </div>
    </div> 
  </div>
</div>
