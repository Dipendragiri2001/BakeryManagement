@model List<Payment>
  <br/>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-green">
      <div class="panel-heading">Payment Record</div>
                        <div class="panel-body">
    <form asp-action="SearchRecord" asp-controller="Payment" method="Get">
      <div class="input-group col-lg-3">
        <input type="date" id="startdate" name="startdate" class="form-control" placeholder="Enter Start date" value="@ViewBag.DateValue"/>
        <br/>
        <div class="input-group"> 
          <input type="date" id="enddate" name="enddate" class="form-control" placeholder="Enter End date" value="@ViewBag.DateValue1"/>
        
        <span class="input-group-btn">
            
          <input type="submit" class="btn btn-primary" value="Search"/>

        </span>
        </div>
        
      </div>
    </form>
 

<br/>


<div class="container col-lg-12">     
      
  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
      <tr>
        <th>Payment Id</th>
        <th>Date</th>
        <th>Supplier Name</th>
        <th>Amount Paid</th>
        <th>Mobile  Number</th>
        <th>Address</th>
        
      </tr>
    </thead>
    <tbody>
      @foreach (var p in Model)
      {
    <tr>
        <td>@p.Id</td>
        <td>@p.CreatedAt.ToShortDateString()</td>
        <td>@p.Supplier.FirstName</td>
        <td>Rs. @p.Amount.ToString("#.##")</td>
        <td>@p.Supplier.MobileNumber</td>
        <td>@p.Supplier.Address</td>
     </tr>
      }  
    </tbody>
  </table>
  
  <div><span class="pull-right">Total Amount : <strong>@ViewBag.Total </strong></span></div>

</div>
                        </div>
    </div>
  </div>
</div>