@model Payment
<hr>
<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-green">
      <div class="panel-heading">Customer Payment List</div>
                        <div class="panel-body">
<form    asp-action="Create" asp-controller="Payment" method="POST">
    <input type="hidden" asp-for="Id"/>

 <div class="form-group">
        <label asp-for="PaymentDate">Payment Date</label>
        <input type="date" asp-for="PaymentDate" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="SupplierId">Supplier Name</label>
        <select asp-for="SupplierId" asp-items="@ViewBag.Payments" class="form-control">Supplier Name</select>
    </div>
    
    <div class="form-group">
        <label asp-for="Amount">Payment Amount</label>
        <input type="number" asp-for="Amount" class="form-control"/>
    </div>


    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-info"/>
    </div>


</form>
       </div>
    </div>
  </div>
</div>
