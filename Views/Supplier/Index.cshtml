@model List<Supplier>

  
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-green">
      <div class="panel-heading">Supplier List</div>
          <div class="panel-body">       
  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
    <thead>
      <tr>
        <th>Supplier Id</th>
        <th>First Name</th>
        <th>Middle Name</th>
        <th>Last Name</th>
        <th>Mobile  Number</th>
        <th>Phone Number</th>
        <th>Address</th>
        <th colspan="2">Action</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var p in Model)
      {
          <tr>
        <td>@p.Id</td>
        <td>@p.FirstName</td>
        <td>@p.MiddleName</td>
        <td>@p.LastName</td>
        <td>@p.MobileNumber</td>
        <td>@p.PhoneNumber</td>
        <td>@p.Address</td>
        <td><a class="btn btn-primary" asp-controller="Supplier" asp-action="Update" asp-route-id="@p.Id">Update</a></td>
        <td><a class="btn btn-primary" asp-controller="Supplier" asp-action="Delete" asp-route-id="@p.Id">Delete</a></td>

      </tr>
      }  
    </tbody>
  </table>
</div>
    </div>
  </div>
</div>
