@model List<DailyMaterialUse>
<br/>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-green">
      <div class="panel-heading">Material Use List</div>
                        <div class="panel-body">
    <form class="col-lg-4"asp-action="SearchByDate" asp-controller="DailyMaterialUse" method="Get">
      <div class="input-group">
        <input type="date" id="date" name="date" class="form-control" placeholder="Enter date" value="@ViewBag.DateValue"/>
        <span class="input-group-btn">
          <input type="submit" class="btn btn-primary" value="Search"/>
        </span>
      </div>
    </form>

<br/>
  <hr>
<div class="container col-lg-12">          
  <table class="table table-bordered table-stripped table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th>Material Name</th>
        <th>Quantity</th>
        <th>Rate per kg</th>
        <th>Price</th>
        
        
      </tr>
    </thead>
    <tbody>
      @foreach (var p in Model)
      {
          <tr>
            <td>@p.CreatedAt.ToShortDateString()</td>
        <td>@p.MaterialStock.ProductName</td>
        <td>Rs. @(p.Quantity)@(p.MaterialStock.MeasurementUnit) </td>
        <td>Rs. @p.MaterialStock.RatePerKg.ToString("#.##")</td>
        <td>Rs. @p.TotalPrice.ToString("#.##")</td>

        
       
      </tr>
      }  
    </tbody>
  </table>
</div>      
  </div>
  </div>
  </div>
