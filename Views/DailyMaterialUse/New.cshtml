@model DailyMaterialUse
<hr>
<div class="row">
  <div class="col-lg-4">
    <div class="panel panel-green">
      <div class="panel-heading">Daily Material Use List</div>
                        <div class="panel-body">
<form asp-action="New" asp-controller="DailyMaterialUse" method="POST">
    <input type="hidden" asp-for="Id"/>

    <div class="form-group">
        <label asp-for="MaterialStockId">Product Name</label>
        <select  asp-for="MaterialStockId" asp-items="@ViewBag.Products" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input type="number" asp-for="Quantity" class="form-control"/>
    </div>

    <div class="form-group">
        <input type="submit" value="Use" class="btn btn-info"/>
    </div>


</form>
      </div>
    </div>
  </div>
</div>